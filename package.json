{
  "name": "hex-tools",
  "version": "1.0.0",
  "description": "Tools for hexagon based grids",
  "main": "./dist/bundle.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "test": "mocha --opts ./test/mocha.opts",
    "test:watch": "mocha --opts ./test/mocha.opts --watch",
    "coverage": "nyc mocha --opts ./test/mocha.opts",
    "webpack": "webpack --config ./webpack/webpack.config.ts",
    "webpack:watch": "webpack --watch --config ./webpack/webpack.config.ts",
    "lint": "yarn lint:src && yarn lint:test && yarn lint:webpack",
    "lint:src": "tslint --project ./src/tsconfig.json --fix",
    "lint:test": "tslint --project ./test/tsconfig.json --fix",
    "lint:webpack": "tslint --project ./webpack/tsconfig.json --fix",
    "prepublish": "yarn lint && yarn coverage && yarn webpack"
  },
  "author": "Kurochkin Oleg",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/md5": "^2.1.32",
    "@types/mocha": "^5.2.1",
    "@types/node": "^10.3.0",
    "@types/webpack": "^4.4.0",
    "chai": "^4.1.2",
    "md5": "^2.2.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.1",
    "source-map-loader": "^0.2.3",
    "source-map-support": "^0.5.6",
    "ts-loader": "^4.3.1",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "tslint-loader": "^3.6.0",
    "typescript": "^2.9.1",
    "webpack": "^4.10.2",
    "webpack-cli": "^3.0.1"
  },
  "peerDependencies": {
    "md5": "^2.2.1"
  }
}

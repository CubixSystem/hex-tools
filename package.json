{
  "name": "hex-tools",
  "version": "1.0.0",
  "description": "Tools for hexagon based grids",
  "main": "./dist/bundle.node.js",
  "browser": "./dist/bundle.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "dev": "npm run webpack:watch",
    "test": "mocha --opts ./test/mocha.opts",
    "test:watch": "mocha --opts ./test/mocha.opts --watch",
    "coverage": "nyc mocha --opts ./test/mocha.opts",
    "webpack": "webpack --config ./webpack/webpack.config.ts",
    "webpack:watch": "webpack --watch --config ./webpack/webpack.config.ts",
    "lint": "npm run lint:src && npm run lint:test && npm run lint:webpack",
    "lint:src": "tslint --project ./src/tsconfig.json --fix",
    "lint:test": "tslint --project ./test/tsconfig.json --fix",
    "lint:webpack": "tslint --project ./webpack/tsconfig.json --fix",
    "prepare": "npm run prettier && npm run lint && npm run coverage && npm run webpack",
    "prettier": "prettier --write 'src/**/*.{ts,json}'"
  },
  "author": "Kurochkin Oleg",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.1",
    "@types/webpack": "^4.41.0",
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "source-map-loader": "^0.2.4",
    "source-map-support": "^0.5.16",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {}
}
